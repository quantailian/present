<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@drawable/hot_stort"
    android:descendantFocusability="blocksDescendants">

    <ImageView

        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"

        android:id="@+id/hotFmGv_coverImgIv"
        android:layout_width="175dp"
        android:layout_height="175dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/hotFmGv_nameTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="我是一行假数据,是为了看效果的文字" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:text="198.00"
                android:textColor="@android:color/holo_red_light"
                android:id="@+id/hotFmGv_priceTv"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:textSize="20sp"


                />

            <ImageButton
                android:id="@+id/my_hot_imagebtn"
                android:background="@drawable/heart"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/hotFmGv_likesCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="650058" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>