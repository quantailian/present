<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ee3d43">
<ImageView
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:id="@+id/guide_title_one"
    android:background="@mipmap/dl"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/guide_title_two"
        android:background="@mipmap/logo_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<ImageView
    android:id="@+id/guide_search"
    android:layout_toRightOf="@+id/guide_title_two"
    android:layout_marginLeft="120dp"
    android:background="@mipmap/fdj"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>