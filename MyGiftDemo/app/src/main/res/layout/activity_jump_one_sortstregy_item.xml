<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
<ImageView
    android:scaleType="centerCrop"
    android:layout_margin="5dp"
    android:id="@+id/one_item_imagecontent"
    android:src="@mipmap/ic_launcher"
    android:layout_width="120dp"
    android:layout_height="80dp" />
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:id="@+id/one_item_content"
                android:text="如何挑选一款与自己相称的香水"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_margin="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:id="@+id/one_item_time"
                android:text="7-20"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/one_item_author"
                    android:layout_margin="2dp"
                    android:textSize="10sp"
                    android:text="我是作者"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/one_item_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/heart" />
                <TextView
                    android:id="@+id/one_item_likecount"
                    android:text="5411"
                    android:textSize="10sp"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>